<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shape for stroke (Gradient Outline) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="45"
                android:centerColor="#D3F9CE"
                android:endColor="@color/brand_accent_green"
                android:startColor="@color/white" />
        </shape>
    </item>

    <!-- Inner shape for card background -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_200" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
